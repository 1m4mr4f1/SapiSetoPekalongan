---
// src/components/Product.astro

// Data Produk (Semua digabung dalam satu list)
const products = [
  {
    title: "Kepala Sapi",
    desc: "Bagian kepala utuh atau potongan, cocok untuk masakan gulai atau sop tradisional.",
    icon: "cow",
    type: "fresh"
  },
  {
    title: "Buntut (Oxtail)",
    desc: "Buntut sapi pilihan dengan potongan rapi. Favorit untuk Sop Buntut restoran.",
    icon: "cow",
    type: "fresh"
  },
  {
    title: "Kaki Sapi (Kikil)",
    desc: "Kaki sapi bersih yang kaya kolagen, sempurna untuk sop kaki atau oseng kikil.",
    icon: "cow",
    type: "fresh"
  },
  {
    title: "Iga Sapi (Ribs)",
    desc: "Tulang iga dengan daging tebal. Sangat pas untuk Iga Bakar atau Konro.",
    icon: "cow",
    type: "fresh"
  },
  {
    title: "Bakso Sapi Premium",
    desc: "Bakso daging sapi asli tanpa pengawet, tekstur kenyal dan rasa daging kuat.",
    icon: "frozen",
    type: "frozen"
  },
  {
    title: "Sosis Sapi Jumbo",
    desc: "Sosis sapi ukuran besar dengan bumbu rempah pilihan, siap bakar atau goreng.",
    icon: "frozen",
    type: "frozen"
  },
  {
    title: "Daging Giling",
    desc: "Daging sapi giling murni higienis, praktis untuk tumisan, pasta, atau isian.",
    icon: "frozen",
    type: "frozen"
  },
  {
    title: "Paru Ungkep",
    desc: "Paru sapi yang sudah dibumbui rempah kuning, tinggal goreng sebentar langsung santap.",
    icon: "frozen",
    type: "frozen"
  },
];
---

<section id="product" class="py-12 sm:py-16 md:py-20 bg-gray-50 relative">

  <div class="absolute top-0 right-0 opacity-20 pointer-events-none overflow-hidden">
     <svg width="150" height="150" sm:width="200" sm:height="200" fill="none" viewBox="0 0 200 200">
        <defs>
           <pattern id="dot-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
              <circle cx="2" cy="2" r="2" class="text-[#E65100]" fill="currentColor" />
           </pattern>
        </defs>
        <rect width="200" height="200" fill="url(#dot-pattern)" />
     </svg>
  </div>

  <div class="max-w-7xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8">

    <div class="text-center mb-10 sm:mb-12 md:mb-16 animate-fade-in">
      <div class="inline-flex items-center justify-center mb-4 sm:mb-6 animate-scale-in">
        <div class="bg-[#E65100] text-white font-bold px-4 sm:px-6 md:px-8 py-2 sm:py-3 rounded-lg relative shadow-lg uppercase tracking-wider text-xs sm:text-sm md:text-base hover:scale-105 transition duration-300">
            PRODUK KAMI
            <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-[6px] sm:border-l-[8px] border-l-transparent border-r-[6px] sm:border-r-[8px] border-r-transparent border-t-[6px] sm:border-t-[8px] border-t-[#E65100]"></div>
        </div>
      </div>

      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-4xl font-bold text-gray-900 mb-3 sm:mb-4 animate-fade-in-up px-2">
        Aneka Pilihan Daging & Olahan
      </h2>
      <p class="text-gray-500 max-w-2xl mx-auto text-xs sm:text-sm md:text-base lg:text-lg animate-fade-in-up px-2" style="animation-delay: 0.1s">
        Kami menyediakan berbagai potongan karkas segar hingga produk olahan beku yang higienis dan halal untuk kebutuhan dapur Anda.
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">

      {products.map((item, index) => (
        <div class="group bg-white rounded-2xl p-4 sm:p-6 border border-gray-100 hover:border-orange-200 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 relative h-full animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>

            <div class="flex items-start justify-between mb-4 sm:mb-6">
                <div class="w-10 sm:w-12 h-10 sm:h-12 rounded-full bg-orange-50 flex items-center justify-center text-[#E65100] group-hover:bg-[#E65100] group-hover:text-white transition-colors duration-300 hover:rotate-12 hover:scale-110 flex-shrink-0">
                    {item.type === 'fresh' ? (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    ) : (
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    )}
                </div>

                <div class="bg-green-100 rounded-full p-1 animate-pulse-slow">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </div>
            </div>

            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 sm:mb-3 group-hover:text-[#E65100] transition-colors">
                {item.title}
            </h3>
            <p class="text-gray-500 text-xs sm:text-sm leading-relaxed">
                {item.desc}
            </p>

        </div>
      ))}

    </div>

  </div>
</section>
