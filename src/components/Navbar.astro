---
// src/components/Navbar.astro
---

<nav class="fixed w-full z-50 bg-white border-b border-[#E65100] animate-fade-in-down shadow-lg">
  <div class="max-w-7xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 sm:h-20 md:h-24">
      
      <!-- Logo Section -->
      <div class="flex-shrink-0 flex items-center gap-2 sm:gap-3 md:gap-4 animate-fade-in-left">
        <div class="w-10 sm:w-12 md:w-14 h-10 sm:h-12 md:h-14 bg-[#E65100] rounded-full flex items-center justify-center text-white font-bold text-base sm:text-lg md:text-xl shadow-sm hover:scale-110 transition duration-300 animate-scale-in">
            S
        </div>
        <span class="font-bold text-base sm:text-xl md:text-2xl lg:text-2xl tracking-tight text-gray-900 hover:text-[#E65100] transition duration-300">
          Sapi<span class="text-[#E65100]">Seto</span>
        </span>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-4 lg:space-x-8">
        <a href="#hero" class="text-gray-600 hover:text-[#E65100] font-medium text-sm lg:text-base transition duration-300 relative group animate-stagger-1">
          Beranda
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#E65100] group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#product" class="text-gray-600 hover:text-[#E65100] font-medium text-sm lg:text-base transition duration-300 relative group animate-stagger-2">
          Produk
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#E65100] group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#location" class="text-gray-600 hover:text-[#E65100] font-medium text-sm lg:text-base transition duration-300 relative group animate-stagger-3">
          Lokasi
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#E65100] group-hover:w-full transition-all duration-300"></span>
        </a> 
        <a href="#partner" class="text-gray-600 hover:text-[#E65100] font-medium text-sm lg:text-base transition duration-300 relative group animate-stagger-4">
          Partner
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#E65100] group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#footer" class="text-gray-600 hover:text-[#E65100] font-medium text-sm lg:text-base transition duration-300 relative group animate-stagger-5">
          Kontak
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-[#E65100] group-hover:w-full transition-all duration-300"></span>
        </a>
      </div>

      <!-- Mobile Menu Icon & CTA -->
      <div class="flex items-center space-x-2 sm:space-x-4 md:space-x-5 animate-fade-in-right">
        <button class="text-gray-500 hover:text-[#E65100] transition hover:rotate-12 hover:scale-110 p-1.5 sm:p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        
        <!-- Mobile Menu Toggle -->
        <button class="md:hidden text-gray-500 hover:text-[#E65100] transition p-1.5 sm:p-2" id="mobile-menu-btn">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 sm:h-7 sm:w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- CTA Button -->
        <a href="https://wa.me/62812345678" class="bg-[#E65100] hover:bg-[#cc4600] text-white px-3 sm:px-5 md:px-6 py-2 sm:py-2.5 md:py-3 rounded text-xs sm:text-sm md:text-base font-semibold shadow-md hover:shadow-lg hover:scale-105 transition duration-300 uppercase tracking-wide animate-glow whitespace-nowrap">
          Hubungi
        </a>
      </div>

    </div>

    <!-- Mobile Menu (Hidden by default) -->
    <div class="hidden md:hidden pb-4 border-t border-gray-100" id="mobile-menu">
      <a href="#hero" class="block px-3 py-2 text-gray-600 hover:text-[#E65100] hover:bg-orange-50 rounded transition duration-300">Beranda</a>
      <a href="#product" class="block px-3 py-2 text-gray-600 hover:text-[#E65100] hover:bg-orange-50 rounded transition duration-300">Produk</a>
      <a href="#location" class="block px-3 py-2 text-gray-600 hover:text-[#E65100] hover:bg-orange-50 rounded transition duration-300">Lokasi</a>
      <a href="#partner" class="block px-3 py-2 text-gray-600 hover:text-[#E65100] hover:bg-orange-50 rounded transition duration-300">Partner</a>
      <a href="#footer" class="block px-3 py-2 text-gray-600 hover:text-[#E65100] hover:bg-orange-50 rounded transition duration-300">Kontak</a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking a link
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>